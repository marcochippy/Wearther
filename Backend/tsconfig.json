{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext" /* Specify what module code is generated. */,
    "rootDir": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true /* Skip type checking all .d.ts files. */,
    "moduleResolution": "node16",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
